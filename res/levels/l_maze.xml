<?xml version="1.0" encoding="utf-8"?>
<Scene>
    <Audio>
        <BGM>maze_bgm</BGM>
    </Audio>
    <Terrain chunkSize="32" latticeScale="1.0" textureScale="1.0">
        <TerrainPatch origin="(0,0)" size="(2,2)" height="0">
            <HeightModifier>
                <Offset y="0"></Offset>
            </HeightModifier>
            <Transform>
                <Position>(0,0,0)</Position>
            </Transform>
            <Material>
                <Asset>pavedFloor</Asset>
            </Material>
            <Shadow>
                <CullFace>1</CullFace>
            </Shadow>
        </TerrainPatch>
    </Terrain>

    <Chunk coords="(0,0)">
        <Models>
            <Model ypos="relative">
                <Mesh type="icosphere">
                    <Generator>
                        <Density>2</Density>
                    </Generator>
                </Mesh>
                <Material>
                    <Uniform>
                        <Albedo>(1.0,0.4,0.05)</Albedo>
                        <Roughness>0.15</Roughness>
                    </Uniform>
                </Material>
                <Transform>
                    <Position>(0,0,0)</Position>
                    <Scale>0.2</Scale>
                    <Angle>(0,0,0)</Angle>
                </Transform>
            </Model>
            <Model name="tree03" ypos="relative">
                <Transform>
                    <Position>(16,-1.0,16)</Position>
                    <Scale>10.0</Scale>
                    <Angle>(0,0,0)</Angle>
                </Transform>
            </Model>
            <Model name="earthSquare01" ypos="relative">
                <Transform>
                    <Position>(16,-0.1,16)</Position>
                </Transform>
            </Model>
            <!--<Model ypos="relative">
                <Mesh name=".wall01"/>
                <Material>
                    <Uniform>
                        <Albedo>(0.4,1.0,0.05)</Albedo>
                        <Roughness>0.15</Roughness>
