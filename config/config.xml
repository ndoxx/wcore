<?xml version="1.0" encoding="utf-8"?>
<Config>
    <folders>
        <path name="config"    value="config/"/>
        <path name="log"       value="logs/"/>
        <path name="level"     value="res/levels/"/>
        <path name="shader"    value="res/shaders/"/>
        <path name="shaderinc" value="res/shaders/include/"/>
        <path name="font"      value="res/fonts/"/>
        <path name="texture"   value="res/textures/"/>
        <path name="soundfx"   value="res/sound/fx/"/>
        <path name="soundbgm"  value="res/sound/bgm/"/>
        <path name="model"     value="res/models/"/>
    </folders>
    <display>
        <uint name="width"      value="1920"/>
        <uint name="height"     value="1080"/>
        <bool name="full"       value="false"/>
        <bool name="vsync"      value="true"/>
        <uint name="target_fps" value="60"/>
    </display>
    <render>
        <chunk>
            <uint name="load_distance" value="5"/>
        </chunk>
        <shadowmap>
            <uint name="width"  value="1920"/>
            <uint name="height" value="1920"/>
        </shadowmap>
        <override>
            <bool name="allow_normal_mapping"   value="true"/>
            <bool name="allow_parallax_mapping" value="true"/>
            <bool name="allow_shadow_mapping"   value="true"/>
        </override>
    </render>
    <camera> <!-- TMP -->
        <float name="near"       value="0.1"/>
        <float name="far"        value="500.0"/>
        <float name="speed_slow" value="5.0"/>
        <float name="speed_fast" value="25.0"/>
        <float name="speed_rot"  value="30.0"/>
    </camera>
    <gui>
        <cursor>
            <bool name="custom" value="false"/>
        </cursor>
    </gui>
    <input>
        <mouse>
            <float name="sensitivity" value="1.0"/>
            <bool  name="y_inverted"  value="false"/>
        </mouse>
    </input>
    <sound>
        <general>
            <uint name="max_channels" value="128"/>
        </general>
    </sound>
    <debug>
        <logger>
            <bool name="print_backtrace_on_error" value="false"/>
        </logger>
        <channel_verbosity>
            <uint name="texture"   value="0"/>
            <uint name="material"  value="0"/>
            <uint name="model"     value="2"/>
            <uint name="shader"    value="0"/>
            <uint name="text"      value="0"/>
            <uint name="input"     value="3"/>
            <uint name="buffer"    value="0"/>
            <uint name="chunk"     value="0"/>
            <uint name="parsing"   value="0"/>
            <uint name="entity"    value="2"/>
            <uint name="sound"     value="3"/>
            <uint name="scene"     value="0"/>
            <uint name="io"        value="0"/>
            <uint name="profile"   value="0"/>
            <uint name="collision" value="0"/>
            <uint name="editor"    value="2"/>
        </channel_verbosity>
        <raycast>
            <geometry>
                <int name="persistence" value="5000"/>
            </geometry>
        </raycast>
    </debug>
</Config>
